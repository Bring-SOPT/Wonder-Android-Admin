                    android:text="주문번호"
                    android:fontFamily="@font/nanumsquareroundotfr"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginRight="16dp"
                    android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/tv_rvitem_done_ordernum"
                    android:layout_marginTop="9dp" app:layout_constraintTop_toTopOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <TextView
                android:text="닉네임"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rvitem_done_nickname"
                android:layout_marginTop="8dp"
                app:layout_editor_absoluteX="13dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_rv_topbar"/>

                <!--tools:layout_editor_absoluteX="16dp"                />-->

        <TextView
                android:text="아메리카노 ICE \n(Regular / 1개)"
                android:textColor="@color/black"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="13dp"
                android:layout_marginStart="16dp"
                android:id="@+id/tv_rvitem_done_menu"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_rvitem_done_nickname"/>
        <TextView
                android:text="5000원"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rvitem_done_cost"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp"/>
        <TextView
                android:text="Relgular/1개"
                android:textColor="@color/black"
                android:fontFamily="@font/nanumsquareroundotfr"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/size_amount" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_rvitem_done_menu"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:fontFamily="@font/nanumsquareroundotfr"
                android:text="요청사항"
                android:textColor="@color/warmgray"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rvitem_done_request" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/size_amount"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" app:layout_constraintHorizontal_bias="0.0"/>
